package Atividade2;

import javax.swing.JOptionPane;

public class Main5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int smo=1200, r=0, p=0;
		
		r = Integer.parseInt(JOptionPane.showInputDialog(null, "Insira seu salario\n"));
		
		if (r > 1.200) {
			p = (r / smo);
			JOptionPane.showMessageDialog(null, "Você recebe: "+ p + "Salários mínimos");
		}
		
		else if (r == 1.200) {	
			p = (r / smo);
			JOptionPane.showMessageDialog(null, "Seu salario minimo é: "+ p);	
		}
		
		
		else if (r >= 1.0) {
			p = (smo / r);
			JOptionPane.showMessageDialog(null, "Faltam: "+ p + "Reais para fazer um salario minimo");	
			
		}
	}
}
